<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:padding="12dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/texto_historial_titulo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Título del libro"
        android:textStyle="bold"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/texto_historial_prestamo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Fecha de préstamo"
        android:layout_marginTop="4dp" />

    <TextView
        android:id="@+id/texto_historial_devolucion"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Fecha de devolución"
        android:layout_marginTop="2dp" />
</LinearLayout>
